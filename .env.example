# Cap Web Application Environment Variables
# Copy this file to .env and update the values

# ---- Core Application URLs ----
WEB_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-key-here
PORT=3000
NODE_ENV=production

# ---- Database Configuration ----
DATABASE_URL=mysql://username:password@hostname:port/database

# ---- S3/MinIO Storage Configuration ----
CAP_AWS_BUCKET=your-bucket-name
CAP_AWS_REGION=us-east-1
CAP_AWS_ACCESS_KEY=your-access-key
CAP_AWS_SECRET_KEY=your-secret-key
CAP_AWS_ENDPOINT=https://your-s3-endpoint.com
CAP_AWS_BUCKET_URL=https://your-bucket-url.com

# S3 Path Style (required for MinIO and some S3-compatible services)
S3_FORCE_PATH_STYLE=true

# ---- Email Configuration (Optional) ----
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_DOMAIN=your-domain.com

# ---- AI Services (Optional) ----
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# ---- Analytics (Optional) ----
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com
POSTHOG_PERSONAL_API_KEY=your-posthog-personal-key

# ---- Stripe Billing (Optional) ----
STRIPE_SECRET_KEY_TEST=sk_test_your-stripe-key
STRIPE_SECRET_KEY_LIVE=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret